rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Calls collection - for WebRTC signaling
    match /calls/{callId} {
      // Allow read if user is authenticated and is either the caller or callee
      allow read: if isAuthenticated() && (
        resource.data.to == request.auth.uid || 
        resource.data.from == request.auth.uid
      );
      
      // Allow write if user is authenticated and is the caller or callee
      allow write: if isAuthenticated() && (
        request.resource.data.to == request.auth.uid || 
        request.resource.data.from == request.auth.uid ||
        resource.data.to == request.auth.uid ||
        resource.data.from == request.auth.uid
      );
      
      // ICE candidates subcollection
      match /ice-candidates/{iceId} {
        // Allow read if user is authenticated
        allow read: if isAuthenticated();
        
        // Allow write if user is authenticated
        allow write: if isAuthenticated();
      }
    }
    
    // FCM tokens collection - for storing user FCM tokens
    match /fcm_tokens/{userId} {
      // Users can only read/write their own token
      allow read, write: if isOwner(userId);
    }
    
    // FCM notifications collection - for queuing notifications
    match /fcm_notifications/{notificationId} {
      // Allow authenticated users to create notifications
      allow create: if isAuthenticated();
      
      // Allow read if user is authenticated (for debugging)
      allow read: if isAuthenticated();
    }
  }
}


